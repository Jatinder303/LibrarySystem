<Window x:Class="LibrarySystem.Login_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibrarySystem"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Button x:Name="Login_Btn" Content="Login" HorizontalAlignment="Left" Margin="292,229,0,0" VerticalAlignment="Top" Width="158" Height="49" Click="Login_Btn_Click"/>

        <Label x:Name="UserName_Lbl" Content="User Name" HorizontalAlignment="Left" Margin="247,111,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="Password_Lbl" Content="Password" HorizontalAlignment="Left" Margin="247,141,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name ="UserName_TextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text=""  Margin="357,111,0,0" VerticalAlignment="Top" Width="120" />
        <TextBox x:Name ="Password_TextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text=""  Margin="357,141,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
